<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingTop="@dimen/_150sdp"
        android:paddingBottom="@dimen/_150sdp"
        android:orientation="vertical">

        <Button
            android:id="@+id/ar_button"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:background="@drawable/button_enter"
            android:text="@string/ar_mode"
            android:layout_gravity="center"
            android:fontFamily="@font/futura_pt_medium"
            android:textColor="@color/blue"
            android:textSize="20dp"


            />

        <Button
            android:id="@+id/scene_button"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/button_enter"
            android:text="@string/scene_mode"
            android:layout_gravity="center"
            android:fontFamily="@font/futura_pt_medium"
            android:textColor="@color/blue"
            android:textSize="20dp"


            />


    </LinearLayout>



</RelativeLayout>