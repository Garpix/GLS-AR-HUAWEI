<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/android_gradient_list"
    android:id="@+id/root_layout"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:src="@drawable/picture_1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/header_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_50sdp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="@string/cargo_space"
        android:fontFamily="@font/futura_pt_medium"
        android:textColor="@color/blue"
        android:textSize="@dimen/_20sdp"

        />


    <ListView
        android:id="@+id/list_view_main"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_240sdp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/header_main"
        android:divider="@null"
        android:layoutAnimation="@anim/layout_animation_slide_right"
        android:dividerHeight="0dp"

        />

    <Button
        android:layout_below="@id/list_view_main"
        android:id="@+id/continue_button"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_enter"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="@string/cont"
        android:fontFamily="@font/futura_pt_medium"
        android:textColor="@color/blue"
        android:textSize="20dp"


        />

</RelativeLayout>